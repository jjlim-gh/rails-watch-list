<div class="row container p-2 m-2">
  <h1>New Bookmark</h1>

  <div class="card col-6 p-2 m-2">
    <%= simple_form_for [ @list, @bookmark ] do |f| %>
      <%= f.association :movie, collection: @movies, value_method: :id %>
      <%= f.input :comment %>
      <%= f.submit %>
    <% end %>
  </div>

</div>
